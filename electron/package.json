{
  "name": "theremin",
  "productName": "Theremin",
  "version": "2.1.0",
  "description": "A multitouch synth with looper, delay & scuzz effects",
  "main": "app.js",
  "scripts": {
    "dev": "electron . --enable-logging",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . --out=dist/osx --platform=darwin --arch=x64 --icon=assets/osx/logo.icns --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:win": "npm run clean:win && electron-packager . --out=dist/win --platform=win32 --arch=ia32 --icon=assets/win/logo.ico --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",

    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/EA Todo-darwin-x64/Theremin.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"dist/win/Theremin-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  },
  "author": "Luke Phillips <luke@femurdesign.com>",
  "devDependencies": {
    "electron": "^1.4.0",
    "electron-builder": "^6.7.7",
    "electron-packager": "^8.0.0"
  }
}
